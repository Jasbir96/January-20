extend base 
block content
  section.Input.fadeInUp
    h2 SIGNUP
    .container__parent
      video.bg-video__content(autoplay='', muted='', loop='')
        source(src='Avocado.mp4', type='video/mp4')
        |         Your browser is not supported
      form.signup
        .entry
          .entry-text
            | Name
          input(type='text', name='Name', placeholder='Your Name', required='',class="name")
        .entry
          .entry-text
            | Email
          input(type='email', name='Email', placeholder='Your Email', required='', class="email")
        .entry
          .entry-text
            | Password
          input(type='password', name='Password', placeholder='**********' class="password")
        .entry
          .entry-text
            | Confirm  Password
          input(type='password', name="ConfirmPassword", placeholder='**********' class="confirmPassword")
        .btn-parent
          button.btn.btn-full.form-button(type="submit") Login